
@{
    Layout = null;
}

<!DOCTYPE html>

<style>
    #footer {
        position: fixed;
        bottom: 0;
        width: 100%;
    }
    .vresize {
        line-height: 1.5em;
        min-height: 4.5em;
        resize: vertical;
    }
</style>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Contact Us</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-2.1.4.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/myScripts.js"></script>
    <script src="https://code.jquery.com/jquery-3.2.1.min.js"
            integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="
            crossorigin="anonymous"></script>
</head>
<body>
    <header>
        <nav id="header_nav_bar">
        </nav>
    </header>

    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-3 col-sm-2">
            </div>

            <div class="panel panel-default col-lg-6 col-md-6 col-sm-8">
                <div class="panel-heading">
                    <h1>Contact Us</</h1>
                </div>
                <form method="post">
                    <div class="panel-body">
                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                <input type="text" name="inputName" class="form-control" placeholder="Name" required />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                                <input type="email" name="inputEmail" class="form-control" placeholder="Email" required />
                            </div>
                        </div>
                        <div class="form-group">
                            @*Subject (List)*@
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-comment"></i></span>
                                <textarea rows="4" class="form-control vresize" type="text" placeholder="Comment" required></textarea>
                            </div>
                        </div>
                        <div>
                            <button type="submit" class="btn btn-primary pull-right">
                                Send <span class="glyphicon glyphicon-send"></span>
                            </button>
                            <button type="reset" name="reset" value="Reset" class="btn btn-secondary pull-left">
                                Clear <span class="glyphicon glyphicon-trash"></span>
                            </button>
                        </div>
                    </div>
                </form>
            </div>

            <div class="col-lg-3 col-md-3 col-sm-2">
            </div>
        </div>
    </div>

    <footer class="panel-footer text-muted" id="footer">
        <div id="footer_nav_bar">

        </div>
    </footer>
</body>
</html>

<script>
    $(document).ready(function () {
        //Get and insert header navbar HTML
        var head_nav_html = getNavBar();
        $('#header_nav_bar').html(getNavBar);

        //Get and insert footer navbar HTML
        var foot_nav_html = getFootNavBar();
        $('#footer_nav_bar').html(getFootNavBar);

        //Make appropriate navbar link active
        var nav_location = this.location.pathname.replace('/Home/', '');
        $('a[href="' + nav_location + '"]').parent().addClass('active');
    });
</script>